{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "linebreak-style": ["error", "unix"],
        "semi": ["warn", "never"],
        "no-eval": 2,
        "no-console": 1
    },
    "globals": {
        "console": true,
        "module": true
    }
}
