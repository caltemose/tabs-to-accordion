borderstyle = 1px solid #555

.Tabs
    h2
        font-weight: normal

.TabsNavigation
    margin: 0
    padding: 0

.TabsNavigation-item
    margin: 0
    padding: 0
    background-color: #fff
    border: borderstyle
    border-right: 0

    &:last-child
        border-right: borderstyle

.TabsNavigation-button
    padding: 0.5em 1em
    text-decoration: none

    &:hover, &[aria-selected="true"], &:active
        background-color: rgba(0, 0, 255, 0.1)

    &:focus
        outline: none
        border: none
        background-color: rgba(0, 0, 255, 0.3)

.TabsAccordion
    background-color: #fff

.TabsAccordion-title
    padding: 0.25em
    border: borderstyle
    border-bottom: 0

    &[aria-selected="true"]
        margin-bottom: 1em
        border-bottom: borderstyle
        background-color: rgba(0, 0, 255, 0.1)

    &:last-of-type
        border-bottom: borderstyle

    &:focus
        outline: none
        background-color: rgba(0, 0, 255, 0.3)

.TabsAccordion-content
    margin-bottom: 1em
    padding: 1em

    p
        margin-top: 0
